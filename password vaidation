#python code for password validation
def helo(passwd):
    special = ["@","#","$","%"]
    val = True
    if len(passwd)<6:
        print("Error")
        val = False
    elif not any (char.isdigit() for char in passwd):
        print ("error no digit")
        val = False
    elif not any (char.isupper()for char in passwd):
        print("No upper case")
        val = False
    elif not any (char in special for char in passwd):
        print("No special charachter")
        val = False
    else:
        print("succesful")
        val = True
helo("Helo2@54521")
